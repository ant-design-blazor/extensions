@page "/"
@using AntDesign.Extensions.Samples.Demos
@rendermode InteractiveServer

<Divider Orientation="left" Style="font-weight:bold">模式</Divider>
<Paragraph>
    三种使用模式：
</Paragraph>
<Row Gutter="(16, 16)">
    <Col Span="8">
    <Card Bordered="false" Title="Modal 模式（默认模式）">
        <Extra>
        </Extra>
        <Body>
            <ModeModal />
        </Body>
    </Card>
    </Col>

    <Col Span="8">
    <Card Bordered="false" Title="Dialog 模式">
        <Extra>
        </Extra>
        <Body>
            <ModeDialog />
        </Body>
    </Card>
    </Col>

    <Col Span="8">
    <Card Bordered="false" Title="Normal 模式">
        <Extra>
        </Extra>
        <Body>
            <ModeNormal />
        </Body>
    </Card>
    </Col>
</Row>


<Divider Orientation="left" Style="font-weight:bold">Mask</Divider>
<Paragraph>
    Mask 只对 Modal 模式生效
</Paragraph>
<Row>
    <Col Span="8">
    <Card Bordered="false" Title="禁用 MaskClick">
        <Extra>
        </Extra>
        <Body>
            <MaskClosable />
        </Body>
    </Card>
    </Col>
    <Col Span="8">
    <Card Bordered="false" Title="自定义 MaskStyle">
